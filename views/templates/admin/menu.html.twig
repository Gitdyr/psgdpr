{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
<div id="modulecontent" class="clearfix">
    <div id="psgdpr-menu">
        <div class="col-lg-2">
            <div class="list-group" v-on:click.prevent>
                <a href="#" class="list-group-item" v-bind:class="{ 'active': isActive('getStarted') }" v-on:click="makeActive('getStarted')"><i class="fa fa-gavel"></i> {{ 'Get started'|trans({}, 'Modules.Psgdpr.Menu') }}</a>
                <a href="#" class="list-group-item" v-bind:class="{ 'active': isActive('dataConfig') }" v-on:click="makeActive('dataConfig')"><i class="fa fa-user-secret"></i> {{ 'Personal data management'|trans({}, 'Modules.Psgdpr.Menu') }}</a>
                <a href="#" class="list-group-item" v-bind:class="{ 'active': isActive('dataConsent') }" v-on:click="makeActive('dataConsent')"><i class="fa fa-check-square"></i> {{ 'Consent checkbox customization'|trans({}, 'Modules.Psgdpr.Menu') }}</a>
                <a href="#" class="list-group-item" v-bind:class="{ 'active': isActive('customerActivity') }" v-on:click="makeActive('customerActivity')"><i class="fa fa-user-circle"></i> {{ 'Customer activity tracking'|trans({}, 'Modules.Psgdpr.Menu') }}</a>
                <a href="#" class="list-group-item" v-bind:class="{ 'active': isActive('faq') }" v-on:click="makeActive('faq')"><i class="fa fa-question-circle"></i> {{ 'Help'|trans({}, 'Modules.Psgdpr.Menu') }}</a>
            </div>
            <div class="list-group" v-on:click.prevent>
                <a class="list-group-item" style="text-align:center"><i class="icon-info"></i> {{ 'Version'|trans({}, 'Modules.Psgdpr.Menu') }} {{ module_version }} | <i class="icon-info"></i> PrestaShop {{ ps_version }}</a>
            </div>
        </div>
    </div>

    {# list your admin tpl #}
    <div id="getStarted" class="psgdpr_menu addons-hide">
        {# {% include '@Modules/psgdpr/views/templates/admin/tabs/getStarted.html.twig' %} #}
    </div>

    <div id="dataConfig" class="psgdpr_menu addons-hide">
        {# {% include '@Modules/psgdpr/views/templates/admin/tabs/dataConfig.html.twig' %} #}
    </div>

    <div id="dataConsent" class="psgdpr_menu addons-hide">
        {# {% include '@Modules/psgdpr/views/templates/admin/tabs/dataConsent.html.twig' %} #}
    </div>

    <div id="customerActivity" class="psgdpr_menu addons-hide">
        {# {% include '@Modules/psgdpr/views/templates/admin/tabs/customerActivity.html.twig' %} #}
    </div>

    <div id="faq" class="psgdpr_menu addons-hide">
        {# {% include '@Modules/psgdpr/views/templates/admin/tabs/help.html.twig' %} #}
    </div>
</div>
{% endblock %}

